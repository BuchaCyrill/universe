{
  "id": "{{prometheus-node_exporter.name}}",
  "instances": {{prometheus-node_exporter.instances}},
  "cpus": {{prometheus-node_exporter.cpus}},
  "mem": {{prometheus-node_exporter.mem}},
  "ports": [0],
  "uris": ["{{resource.assets.uris.node_exporter-tar-gz}}"],
  "cmd": "node_exporter-0.12.0.linux-amd64/node_exporter -web.listen-address :$PORT",
  "constraints": [
    [
      "hostname",
      "UNIQUE"
    ]
  ],
  "healthChecks": [
    {
      "path": "/metrics",
      "portIndex": 0,
      "protocol": "HTTP",
      "gracePeriodSeconds": {{prometheus-node_exporter.healthcheck-grace-period-seconds}},
      "intervalSeconds": {{prometheus-node_exporter.healthcheck-interval-seconds}},
      "timeoutSeconds": {{prometheus-node_exporter.healthcheck-timeout-seconds}},
      "maxConsecutiveFailures": {{prometheus-node_exporter.healthcheck-max-consecutive-failures}},
      "ignoreHttp1xx": false
    }
  ]
}
